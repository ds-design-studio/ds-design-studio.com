<style>
  .service-illustration svg {
    background-color: var(--color-primary-1);
  }

  .screen {
    position: absolute;
    width: calc(100% - 4rem);
    height: calc(100% - 4rem);
    /* margin-inline: auto; */
    top: calc(50% + 0.25rem);
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 5;
    border: 1px solid var(--color-neutral-2);
    border-radius: 1rem;
    background-color: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(12px);
    overflow: hidden;

    &.slim {
      width: 22rem;
    }
  }

  .controls {
    margin: 1rem;

    &.cluster {
      --cluster-space: 0.33rem;
    }

    & > * {
      display: inline-block;
      height: 10px;
      width: 10px;
      border-radius: 999px;
    }

    & > :nth-child(1) {
      background-color: var(--color-primary-4);
    }

    & > :nth-child(2) {
      background-color: var(--color-secondary-4);
    }

    & > :nth-child(3) {
      background-color: var(--color-neutral-7);
    }
  }

  .rows,
  .row {
    display: flex;
    gap: 1rem;
  }

  .rows {
    container: screenRows / size;
    flex-direction: column;
    margin: 1rem;
    margin-block-start: 2rem;
    height: 100%;
  }

  .row {
    /* min-height: 20cqh; */

    &.reorder {
      flex-direction: column;

      & :is(.pane.left, .pane.right) {
        height: 20cqh;
        width: 100%;
      }
    }
  }

  .pane {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    border-radius: var(--rounded-corners-small);
    border: 1px solid var(--pane-border);
    background-color: var(--pane-background);
    overflow: hidden;

    &.left {
      height: 50cqh;
      width: 66.6%;
    }

    &.right {
      height: 50cqh;
      width: 33.3%;
    }

    &.full {
      height: 20cqh;
      width: 100%;
    }

    &.a {
      --pane-background: var(--color-primary-1);
      --pane-border: var(--color-primary-2);
    }

    &.b {
      --pane-background: var(--color-secondary-1);
      --pane-border: var(--color-secondary-2);
    }

    &.c {
      --pane-background: var(--color-neutral-2-fade);
      --pane-border: var(--color-neutral-2);
    }

    & .letter {
      font-family: var(--font-heading);
      font-weight: var(--font-heading-weight);
      font-size: 32px;
    }
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    mix-blend-mode: multiply;
  }
</style>
