<div class="service-illustration web-design">
  <div class="screen">
    <div class="controls | cluster">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <div class="rows">
      <div class="row animate">
        <div class="pane left a">
          <span class="letter">A</span>
          <img
            class="bg-grid"
            src="/svg/grid-lines.svg"
            width="600"
            alt=""
            loading="eager"
          />
        </div>
        <div class="pane right b">
          <span class="letter">B</span>
          <img
            class="bg-grid"
            src="/svg/grid-lines.svg"
            width="600"
            alt=""
            loading="eager"
          />
        </div>
      </div>
      <div class="row">
        <div class="pane full c">
          <span class="letter">C</span>
          <img
            class="bg-grid"
            src="/svg/grid-lines.svg"
            width="600"
            alt=""
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
  <svg
    width="900"
    height="600"
    viewBox="0 0 900 600"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
