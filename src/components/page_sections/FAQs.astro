---
import type { CollectionEntry } from "astro:content";

type Props = {
  heading?: string;
  faqs?: CollectionEntry<"faqs">;
};

const { heading = "FAQs", faqs } = Astro.props;
---

<article id="faqs">
  <div class="content-wrapper">
    <slot name="header"><h2>{heading}</h2></slot>
    <div class="grid-6">
      {
        faqs?.data.entries.map((faq) => (
          <div class="flow">
            <h3>{faq.question}</h3>
            <p set:html={faq.answer} />
          </div>
        ))
      }
    </div>
  </div>
</article>

<style>
  article {
    margin-block: var(--section-spacer);
  }

  .grid-6 {
    gap: var(--space-2xl);

    & > * {
      grid-column: span 3;
    }
  }

  h3 {
    font-size: var(--step-1);
  }

  @container contentWrapper (max-width: 768px) {
    .grid-6 {
      column-gap: 0;

      & > * {
        grid-column: 1 / span all;
      }
    }
  }
</style>
