---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
// import illustration from "../../assets/illustration-1.png";

type Props = {
    heading?: string;
    content: string[];
    image: ImageMetadata;
    imageAlt?: string;
    layout?: "normal" | "flipped";
};

const {
    heading,
    content,
    image,
    imageAlt = "",
    layout = "normal",
} = Astro.props;
---

<div class="feature" data-layout={layout}>
    <Image
        alt={imageAlt}
        class="feature-image rounded-corners"
        format="webp"
        loading="eager"
        src={image}
        width={1200}
    />
    <div class="feature-content">
        {heading && <h2>{heading}</h2>}
        {content.map((paragraph) => <p set:html={paragraph} />)}
    </div>
</div>
