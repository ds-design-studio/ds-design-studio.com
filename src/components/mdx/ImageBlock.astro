---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
    image: ImageMetadata;
    imageAlt?: string;
    span?: "centered" | "full-width";
};

const { image, imageAlt = "", span = "centered" } = Astro.props;
---

<Image
    alt={imageAlt}
    class:list={["block-image", "rounded-corners", span]}
    format="webp"
    loading="lazy"
    src={image}
    width={1600}
/>
