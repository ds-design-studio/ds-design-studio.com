---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

type Props = {
  image: ImageMetadata;
  imageAlt?: string;
  span?: "centered" | "full-width";
};

const { image, imageAlt = "", span = "centered" } = Astro.props;
---

<Image
  class:list={["block-image", "rounded-corners", span]}
  src={image}
  alt={imageAlt}
  width={1600}
  loading="lazy"
  format="webp"
/>
